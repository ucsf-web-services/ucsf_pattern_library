<div class="profile-teaser">
  <div class="profile-teaser__image">
    {% include "atoms-profile-image-small" %}
  </div>
    <h3 class="profile-teaser__name"><a href="#">{{ text.profile.name }}</a></h3>
    <div class="profile-teaser__detail">
        <p class="profile-teaser__title">{{ text.profile.title }}</p>
        <p class="profile-teaser__department">{{ text.profile.info|nl2br }}</p>
      <div class="profile-teaser__text">
          <p>{{ text.profile.teaser|nl2br }}</p>
      </div>
    </div>
</div>
